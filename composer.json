{
  "name": "accepton/accepton",
  "description": "Get paid in your customer's preferred method",
  "license": "MIT",
  "authors": [
    {
      "name": "AcceptOn",
      "email": "developers@accepton.com"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.3",
    "phpmd/phpmd": "^2.4",
    "sebastian/phpcpd": "^2.0",
    "sensiolabs/security-checker": "^3.0",
    "squizlabs/php_codesniffer": "^2.6",
    "vinkla/climb": "^0.8.1",
    "d11wtq/boris": "^1.0"
  },
  "autoload": {
    "files": ["lib/accepton.php"]
  },
  "scripts": {
    "check": ["@phplint", "@phpcs", "@phpmd", "@phpcpd"],
    "climb": "vendor/bin/climb",
    "dev": ["@check", "@security", "@test"],
    "phpcpd": "vendor/bin/phpcpd lib",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 {lib,tests}",
    "phplint": "php -l {lib,tests}",
    "phpmd": "vendor/bin/phpmd lib text unusedcode,naming,design,controversial,codesize",
    "phpunit": "vendor/bin/phpunit",
    "security": ["@climb", "@security_checker"],
    "security_checker": "vendor/bin/security-checker security:check",
    "test": ["@phpunit"]
  }
}
